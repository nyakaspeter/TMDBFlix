<Page
    x:Class="TMDBFlix.Views.ContentGridPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:app30="using:App30"
    xmlns:models="using:TMDBFlix.Core.Models"
    xmlns:helpers="using:TMDBFlix.Helpers"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:ImagePathToUrlConverter x:Key="ImageUrlConverter" />
        <helpers:ReleaseDateToYearConverter x:Key="ReleaseYearConverter" />
        <helpers:KnownForConverter x:Key="KnownForConverter" />
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{StaticResource PageMargin}">

            <TextBlock
                    x:Uid="PopularMovies"
                    Margin="{StaticResource CategoryMargin}"
                    HorizontalAlignment="Left"
                    Style="{ThemeResource CategoryStyle}" />
            <Grid x:Name="PopularMovies">
                <Button
                    Tag="PopularMovies" Padding ="0" Margin ="0,0,0,14" Canvas.ZIndex="1" Background="{StaticResource SystemControlTransparentBrush}"
                    Click = "ScrollBackward" Width = "48" Height = "96" HorizontalContentAlignment="Left"  VerticalAlignment ="Center" HorizontalAlignment = "Left">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE973;"/>
                </Button>
                <Button
                    Tag="PopularMovies" Padding ="0" Margin ="0,0,0,14" Canvas.ZIndex="1" Background="{StaticResource SystemControlTransparentBrush}"
                    Click = "ScrollForward" Width = "48" Height = "96" HorizontalContentAlignment="Right" VerticalAlignment ="Center" HorizontalAlignment = "Right">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE974;"/>
                </Button>

                <controls:AdaptiveGridView
                    Margin="{StaticResource OneRowGridMargin}"
                    ItemsSource="{x:Bind ViewModel.PopularMovies,Mode=OneWay}"
                    ItemClickCommand="{x:Bind ViewModel.ItemClickCommand}"
                    StretchContentForSingleRow="True"
                    SelectionMode="None"
                    IsItemClickEnabled="True"
                    animations:Connected.ListItemElementName="itemThumbnail"
                    animations:Connected.ListItemKey="animationKeyContentGrid"
                    DesiredWidth="160"
                    ItemHeight="290"
                    OneRowModeEnabled="True">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate x:DataType="models:Movie">
                            <Grid
                                x:Name="itemThumbnail"
                                Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <app30:ImageLoader
                                        Source="{Binding poster_path, Converter={StaticResource ImageUrlConverter}}"
                                        Height="240" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <app30:ImageLoader.LoadingContent>
                                            <ProgressRing IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                Width="48" Height="48" Foreground="White"/>
                                        </app30:ImageLoader.LoadingContent>
                                        <app30:ImageLoader.FailedContent>
                                            <TextBlock Text="Failed" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </app30:ImageLoader.FailedContent>
                                    </app30:ImageLoader>
                                    <TextBlock
                                        Margin="{StaticResource XXSmallLeftTopRightBottomMargin}"
                                        HorizontalAlignment="Left"
                                        Text="{Binding title}"
                                        Style="{ThemeResource TitleStyle}" />
                                    <TextBlock
                                        Margin="{StaticResource XXSmallLeftRightBottomMargin}"
                                        HorizontalAlignment="Left"
                                        Text="{Binding release_date, Converter={StaticResource ReleaseYearConverter}}"
                                        Style="{ThemeResource YearStyle}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                </controls:AdaptiveGridView>
            </Grid>

            <TextBlock
                    x:Uid="PopularShows"
                    Margin="{StaticResource CategoryMargin}"
                    HorizontalAlignment="Left"
                    Style="{ThemeResource CategoryStyle}" />
            <Grid x:Name="PopularShows">
                <Button
                    Tag="PopularShows" Padding ="0" Margin ="0,0,0,14" Canvas.ZIndex="1" Background="{StaticResource SystemControlTransparentBrush}"
                    Click = "ScrollBackward" Width = "48" Height = "96" HorizontalContentAlignment="Left"  VerticalAlignment ="Center" HorizontalAlignment = "Left">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE973;"/>
                </Button>
                <Button
                    Tag="PopularShows" Padding ="0" Margin ="0,0,0,14" Canvas.ZIndex="1" Background="{StaticResource SystemControlTransparentBrush}"
                    Click = "ScrollForward" Width = "48" Height = "96" HorizontalContentAlignment="Right" VerticalAlignment ="Center" HorizontalAlignment = "Right">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE974;"/>
                </Button>

                <controls:AdaptiveGridView
                    Margin="{StaticResource OneRowGridMargin}"
                    ItemsSource="{x:Bind ViewModel.PopularShows,Mode=OneWay}"
                    ItemClickCommand="{x:Bind ViewModel.ItemClickCommand}"
                    StretchContentForSingleRow="True"
                    SelectionMode="None"
                    IsItemClickEnabled="True"
                    animations:Connected.ListItemElementName="itemThumbnail"
                    animations:Connected.ListItemKey="animationKeyContentGrid"
                    DesiredWidth="160"
                    ItemHeight="290"
                    OneRowModeEnabled="True">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate x:DataType="models:Show">
                            <Grid
                                    x:Name="itemThumbnail"
                                    Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <app30:ImageLoader
                                        Source="{Binding poster_path, Converter={StaticResource ImageUrlConverter}}"
                                        Height="240" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <app30:ImageLoader.LoadingContent>
                                            <ProgressRing IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                Width="48" Height="48" Foreground="White"/>
                                        </app30:ImageLoader.LoadingContent>
                                        <app30:ImageLoader.FailedContent>
                                            <TextBlock Text="Failed" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </app30:ImageLoader.FailedContent>
                                    </app30:ImageLoader>
                                    <TextBlock
                                        Margin="{StaticResource XXSmallLeftTopRightBottomMargin}"
                                        HorizontalAlignment="Left"
                                        Text="{Binding name}"
                                        Style="{ThemeResource TitleStyle}" />
                                    <TextBlock
                                        Margin="{StaticResource XXSmallLeftRightBottomMargin}"
                                        HorizontalAlignment="Left"
                                        Text="{Binding first_air_date, Converter={StaticResource ReleaseYearConverter}}"
                                        Style="{ThemeResource YearStyle}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                </controls:AdaptiveGridView>
            </Grid>

            <TextBlock
                    x:Uid="PopularPeople"
                    Margin="{StaticResource CategoryMargin}"
                    HorizontalAlignment="Left"
                    Style="{ThemeResource CategoryStyle}" />
            <Grid x:Name="PopularPeople">
                <Button
                    Tag="PopularPeople" Padding ="0" Margin ="0,0,0,14" Canvas.ZIndex="1" Background="{StaticResource SystemControlTransparentBrush}"
                    Click = "ScrollBackward" Width = "48" Height = "96" HorizontalContentAlignment="Left"  VerticalAlignment ="Center" HorizontalAlignment = "Left">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE973;"/>
                </Button>
                <Button
                    Tag="PopularPeople" Padding ="0" Margin ="0,0,0,14" Canvas.ZIndex="1" Background="{StaticResource SystemControlTransparentBrush}"
                    Click = "ScrollForward" Width = "48" Height = "96" HorizontalContentAlignment="Right" VerticalAlignment ="Center" HorizontalAlignment = "Right">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE974;"/>
                </Button>

                <controls:AdaptiveGridView
                    Margin="{StaticResource OneRowGridMargin}"
                    ItemsSource="{x:Bind ViewModel.PopularPeople,Mode=OneWay}"
                    ItemClickCommand="{x:Bind ViewModel.ItemClickCommand}"
                    StretchContentForSingleRow="True"
                    SelectionMode="None"
                    IsItemClickEnabled="True"
                    animations:Connected.ListItemElementName="itemThumbnail"
                    animations:Connected.ListItemKey="animationKeyContentGrid"
                    DesiredWidth="160"
                    ItemHeight="290"
                    OneRowModeEnabled="True">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate x:DataType="models:Person">
                            <Grid
                                    x:Name="itemThumbnail"
                                    Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <app30:ImageLoader
                                        Source="{Binding profile_path, Converter={StaticResource ImageUrlConverter}}"
                                        Height="240" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <app30:ImageLoader.LoadingContent>
                                            <ProgressRing IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                Width="48" Height="48" Foreground="White"/>
                                        </app30:ImageLoader.LoadingContent>
                                        <app30:ImageLoader.FailedContent>
                                            <TextBlock Text="Failed" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </app30:ImageLoader.FailedContent>
                                    </app30:ImageLoader>
                                    <TextBlock
                                        Margin="{StaticResource XXSmallLeftTopRightBottomMargin}"
                                        HorizontalAlignment="Left"
                                        Text="{Binding name}"
                                        Style="{ThemeResource TitleStyle}" />
                                    <TextBlock
                                        Margin="{StaticResource XXSmallLeftRightBottomMargin}"
                                        HorizontalAlignment="Left"
                                        Text="{Binding known_for, Converter={StaticResource KnownForConverter}}"
                                        Style="{ThemeResource YearStyle}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                </controls:AdaptiveGridView>
            </Grid>

        </StackPanel>
    </ScrollViewer>

</Page>
