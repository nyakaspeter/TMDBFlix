                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Left"
                            Background="{StaticResource SystemControlTransparentBrush}"
                            Canvas.ZIndex="1"
                            Tag="NowPlayingMovies"
                            Tapped="ScrollBackward">
