<custom:CustomPage x:Class="TMDBFlix.Views.ImagePage"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
                   xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
                   xmlns:custom="using:TMDBFlix.Controls"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:helpers="using:TMDBFlix.Helpers"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:models="using:TMDBFlix.Core.Models"
                   x:Name="CustomPage"
                   Style="{StaticResource PageStyle}"
                   mc:Ignorable="d">

    <Grid>
        <ScrollViewer x:Name="Scroller"
                      HorizontalScrollBarVisibility="Auto"
                      MinZoomFactor="0.95"
                      VerticalScrollBarVisibility="Auto"
                      ZoomMode="Enabled">
            <Image x:Name="Img"
                   MaxWidth="{Binding ActualWidth, ElementName=CustomPage}"
                   MaxHeight="{Binding ActualHeight, ElementName=CustomPage}" />
        </ScrollViewer>
    </Grid>

</custom:CustomPage>
